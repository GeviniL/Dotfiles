[global]
    ### Display ###
    # Which monitor should the notifications be displayed on.
    monitor = 0
    # Display notification on focused monitor.  Possible modes are:
    #   mouse: follow mouse pointer
    #   keyboard: follow window with keyboard focus
    #   none: don't follow anything
    follow = none
    width = 300
    # Using the new height syntax for dunst 1.12.0+
    height = (0, 200)
    origin = top-right
    # Using the new offset syntax for dunst 1.12.0+
    offset = (15, 40)
    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 0
    progress_bar_min_width = 125
    progress_bar_max_width = 250
    progress_bar_corner_radius = 4
    icon_corner_radius = 5
    close_all = ctrl+space
    history = mod1+grave
    # Show how many messages are currently hidden (because of geometry).
    indicate_hidden = yes
    # Shrink window if it's smaller than the width.
    shrink = no
    # The transparency of the window (0-100).
    transparency = 15
    separator_height = 2
    padding = 8
    horizontal_padding = 10
    text_icon_padding = 10
    frame_width = 1
    gap_size = 5
    # Catppuccin Mocha border color (subtle lavender)
    frame_color = "#cba6f7"
    # Define a color for the separator.
    separator_color = auto
    # Sort messages by urgency.
    sort = yes
    idle_threshold = 0
    ### Text ###
    font = JetBrainsMono Nerd Font 9
    line_height = 2
    markup = full
    # Format with app name, summary and body
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = -1
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = no
    ### Icons ###
    icon_position = left
    min_icon_size = 24
    max_icon_size = 48
    icon_path = /usr/share/icons/Adwaita/16x16/status/:/usr/share/icons/Adwaita/16x16/devices/:/usr/share/icons/Adwaita/16x16/apps/:/usr/share/icons/Adwaita/24x24/status/:/usr/share/icons/Adwaita/24x24/devices/:/usr/share/icons/Adwaita/24x24/apps/:/usr/share/icons/Papirus-Dark/16x16/status/:/usr/share/icons/Papirus-Dark/16x16/devices/:/usr/share/icons/Papirus-Dark/16x16/apps/:/usr/share/icons/Papirus-Dark/24x24/status/:/usr/share/icons/Papirus-Dark/24x24/devices/:/usr/share/icons/Papirus-Dark/24x24/apps/:/usr/share/icons/hicolor/16x16/apps/:/usr/share/icons/hicolor/16x16/status/:/usr/share/icons/hicolor/16x16/devices/:/usr/share/icons/hicolor/24x24/apps/:/usr/share/icons/hicolor/24x24/status/:/usr/share/icons/hicolor/24x24/devices/:/usr/share/pixmaps/
    ### History ###
    sticky_history = no
    history_length = 20
    ### Misc/Advanced ###
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/firefox -new-tab
    always_run_script = true
    title = Dunst
    class = Dunst
    corner_radius = 8
    ignore_dbusclose = false
    force_xinerama = false
    ### Mouse
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

# Experimental features
[experimental]
    per_monitor_dpi = false

# Catppuccin Mocha colors for low urgency
[urgency_low]
    background = "#1e1e2eCC"
    foreground = "#cdd6f4"
    frame_color = "#94e2d5"
    timeout = 5
    default_icon = dialog-information

# Catppuccin Mocha colors for normal urgency
[urgency_normal]
    background = "#1e1e2eCC"
    foreground = "#cdd6f4"
    frame_color = "#89b4fa"
    timeout = 7
    default_icon = dialog-information

# Catppuccin Mocha colors for critical urgency
[urgency_critical]
    background = "#1e1e2eCC"
    foreground = "#cdd6f4"
